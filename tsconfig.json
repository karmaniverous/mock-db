{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2020",
    "tsBuildInfoFile": "./.tsbuildinfo"
  },
  "exclude": ["coverage/", "dist/", "docs/"],
  "include": ["**/*.ts"]
}
