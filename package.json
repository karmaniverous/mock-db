{
  "author": "Jason Williscroft",
  "bugs": {
    "url": "https://github.com/karmaniverous/mock-db/issues"
  },
  "dependencies": {
    "@karmaniverous/entity-tools": "^0.6.8",
    "radash": "^12.1.1"
  },
  "description": "Mock DynamoDB-style query & scan behavior with local JSON data.",
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.51.0",
    "@eslint/js": "^9.38.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.2.0",
    "@types/node": "^24.9.1",
    "@vitest/coverage-v8": "^4.0.1",
    "auto-changelog": "^2.5.0",
    "eslint-plugin-vitest": "^0.5.4",
    "cross-env": "^10.1.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tsdoc": "^0.4.0",
    "knip": "^5.66.2",
    "lefthook": "^2.0.0",
    "prettier": "^3.6.2",
    "release-it": "^19.0.5",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.5",
    "rollup-plugin-dts": "^6.2.3",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.14",
    "typedoc-plugin-mdn-links": "^5.0.10",
    "typedoc-plugin-replace-text": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.1"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/mjs/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/karmaniverous/mock-db#readme",
  "keywords": [
    "dynamodb",
    "json",
    "mock",
    "testing",
    "typescript"
  ],
  "license": "BSD-3-Clause",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "name": "@karmaniverous/mock-db",
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "changelog": "npx auto-changelog --stdout --commit-limit false --unreleased --template https://raw.githubusercontent.com/release-it/release-it/main/templates/changelog-compact.hbs",
      "commitMessage": "chore: release v${version}",
      "requireBranch": "main"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "after:init": [
        "npm run lint",
        "npm run test",
        "npm run build"
      ],
      "before:npm:release": [
        "npx auto-changelog -p",
        "npm run docs",
        "git add -A"
      ],
      "after:release": [
        "git switch -c release/${version}",
        "git push -u origin release/${version}",
        "git switch ${branchName}"
      ]
    },
    "npm": {
      "publish": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karmaniverous/mock-db.git"
  },
  "scripts": {
    "build": "rimraf dist && rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "docs": "typedoc",
    "knip": "knip",
    "lint": "eslint . --ext .ts && prettier -c .",
    "lint:fix": "eslint --fix . --ext .ts && prettier --write .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "release": "dotenvx run -f .env.local -- release-it",
    "release:pre": "dotenvx run -f .env.local -- release-it --no-git.requireBranch --github.prerelease --preRelease",
    "test": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "version": "0.3.4"
}
